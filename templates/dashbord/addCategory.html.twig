{% extends 'base.html.twig' %}

{% block title %}Ajouter une catégorie{% endblock %}
{% block body %}
    <div class="container">
        <div class=" row m-3" >
            <div style="max-width: 500px;" class="bg-light mx-auto my-5 p-5 shadow-sm border border-secondary rounded">
                <h2 class="my-2 " style="font-weight: 500;">Ajouter une catégorie</h2>
                {{ form_start(addCatForm) }}
                {{ form_widget(addCatForm) }}
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary" style="font-size: 16px;">Enregistrer</button>
                </div>
                {{ form_end(addCatForm) }}
            </div>  
        </div>
    </div>
{% endblock %}