{% extends 'base.html.twig' %}

{% block title %}Recrutements{% endblock %}



{% block body %}

    <div class="container">

        <div class="row justify-content-center my-5">
            <h1 style="font-weight: 500;">{{ 'recrutements'|upper }}</h1>
        </div>

        <div class="row justify-content-end mx-2">
            <a href="{{ path('addRec')}}">
                <button class="btn btn-primary my-2"type="button">
                    Ajouter
            </button>
            </a>
        </div>
        <div class="row mx-2 p-2 category">
            {% for rec in recruitement %}
            <div class="col-12">
            
                <div class="row justify-content-between px-4 border-bottom mx-3 ">
                    <span class="my-auto">{{rec.job}}</span>
                    <span>
                        <a href="{{ path('editRec',{'id': rec.id}) }}">
                            <button class="btn pr-0 btnmdsup"><i class="fas fa-edit"></i></button>
                        </a>
                        <a href="{{ path('removeRec',{'id': rec.id}) }}"
                           onclick="return confirm ('voulez vous vraiment supprimer {{rec.job }} ?')">
                            <button class="btn pr-0 btnmdsup delete"><i class="far fa-trash-alt"></i></button>
                        </a>
                    </span>
                        
                    </div>
                </div>
            {% endfor %}
            </div>
        </div>

    </div>
    

{% endblock %}

