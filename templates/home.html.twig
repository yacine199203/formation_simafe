{% extends 'base.html.twig' %}

{% block title %}Mat√©riel frigorifique et equipements{% endblock %}

{% block body %}

    <div class="container">

    {#*********************************** SLIDERS ***********************************#}
    
        <div id="carouselExampleIndicators" class="carousel slide shadow-lg mt-1" data-ride="carousel">
            <ol class="carousel-indicators">
                {% for slider in sliders %}
                <li data-target="#carouselExampleIndicators" data-slide-to="{{loop.index0}}" {% if loop.first %} class="active"
                    {% endif %}></li>
                {% endfor %}
            </ol>
            <div class="carousel-inner">
                {% for slider in sliders %}
                <div class="carousel-item {% if loop.first %} active {% endif %} ">
                    <img src="images/{{slider.image}}" class="d-block w-100" alt="...">
                </div>
                {% endfor %}
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
    
{% endblock %}